
@{
    Layout = null;
}


<!doctype html>
<html lang="en" data-bs-theme="auto">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Fridgoo · Giriş</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/sign-in.css" rel="stylesheet" />
</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary">


    <main class="form-signin w-100 m-auto">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            <h1 class="h3 mb-3 fw-normal" style="color:white">Giriş yap</h1>

            <div class="form-floating">
                <input type="text" class="form-control" id="username" placeholder="" name="personelUsername">
                <label for="username">Kullanıcı Adınız</label>
            </div>
            <br>
            <div class="form-floating">
                <input type="password" class="form-control" id="password" placeholder="" name="personelPasswd">
                <label for="password">Parola</label>
            </div>
            <br>
            <button class="btn btn-primary w-100 py-2" type="submit">Giriş Yap</button>
            <br><br>


            if (ViewBag.mesaj != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.mesaj
                </div>
            }

            @*<h6 style="color:white; user-select:none" class="position-absolute bottom-0 start-50 translate-middle-x"><b>Beyaz eşya servisleri için geliştirildi. - Developed for white goods services.</b></h6>*@
        }
    </main>
</body>
</html>
