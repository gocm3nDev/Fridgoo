@using IsTakip.Models
@model List<TBL_ISLER>

@{
    ViewBag.Title = "Ertelenmisler";
    Layout = "~/Views/Shared/_LayoutCalisan.cshtml";
}

<br />
<h2 class="text-center">Ertelenmiş İşler</h2>
<br />

<br />
<table class="table">
    <tr>
        <th>ID</th>
        <th>Ad-Soyad</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Adres</th>
        <th>Müşteri Telefon</th>
        <th>İletilen Tarih</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.isDurumID == 3)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.musteriAdSoyad</td>
                <td>@item.isinBasligi</td>
                <td>@item.isinAciklamasi</td>
                <td>@item.musteriAdresi</td>
                <td>@item.musteriTel</td>
                <td>@item.iletilenTarih.ToString("dd MMMM yyyy hh:mm")</td>
                <td>Ertelenmiş</td>
            </tr>
        }
    }
</table>
<br />

