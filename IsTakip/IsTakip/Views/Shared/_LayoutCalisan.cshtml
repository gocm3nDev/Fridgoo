
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fridgoo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/MyTemplate/style.css" rel="stylesheet" />
</head>
<body class="bg-light text-dark">
    <button class="btn btn-primary d-md-none" id="toggleSidebar" style="position: absolute; top: 10px; left: 10px;">☰</button>
    <div class="sidebar" id="sidebar">
        <h4 style="user-select: none">Çalışan Paneli</h4>
        <h5 style="user-select: none">@ViewBag.personelName · @ViewBag.birimAd</h5>

        <ul class="list-unstyled">
            <li class="nav-item">
                @Html.ActionLink("Anasayfa", "Index", "Calisan", new { area = "" }, null)
            </li>
            <li class="nav-item">
                @Html.ActionLink("İşler", "Isler", "Calisan", new { area = "" }, null)
            </li>
            <li class="nav-item">
                @Html.ActionLink("Ertelenmişler", "Ertelenmisler", "Calisan", new { area = "" }, null)
            </li>
            <li class="nav-item">
                @Html.ActionLink("Mesajlar", "Mesajlar", "Calisan", new { area = "" }, null)
            </li>
            <li class="nav-item">
                @Html.ActionLink("Çıkış Yap", "CikisYap", "Calisan", new { area = "" }, null)
            </li>
        </ul>

        <div class="container text-center position-relative">
            <div class="d-flex flex-column align-items-end gap-2">
                <button class="btn btn-dark">
                    <i class="fa-solid fa-book-open-reader"></i>
                </button>
            </div>
        </div>
    </div>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <script src="~/JS_Files/getAddress.js"></script>
    <script src="~/MyTemplate/app.js"></script>
</body>
</html>